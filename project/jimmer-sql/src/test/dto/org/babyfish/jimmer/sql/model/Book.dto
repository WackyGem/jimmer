import java.time.LocalDateTime
import testpkg.annotations.{Job, Task, Priority }

abstract Key {
    name
    edition
}

BookView : Key {
    id
    store {
        name
    }
    authors {
        firstName
        lastName
    }
}

BookSpecification {
    #allScalars(Book)?

    @Job(value = [
        Task("Prepare environment", priority = Priority.HIGH, estimation = 4),
        Task("Install intellij", estimation = 1),
        Task("Develop Service", estimation = 800),
        Task(value = "Develop UI", priority = Priority.LOW, estimation = 100)
    ])
    tag1: Int
    tag2: Int?
    tag3: Map<String, Set<String>>
    tag4: MutableMap<String, MutableSet<String>>
    tag5: Array<Int>
    tag6: Array<Int?>
    tag7: LocalDateTime
}

input BookInput {
    #allScalars
    id(store)
    id(authors) as authorIds
}

input CompositeBookInput {
    #allScalars
    store {
        #allScalars
        -id
    }
    authors {
        #allScalars
        -id
    }
}
