import java.time.LocalDateTime

abstract Key {
    name
    edition
}

BookView : Key {
    id
    store {
        name
    }
    authors {
        firstName
        lastName
    }
}

input BookInput {
    #allScalars
    id(store)
    id(authors) as authorIds
    tag1: Int
    tag2: Int?
    tag3: Map<String, Set<String>>
    tag4: MutableMap<String, MutableSet<String>>
    tag5: Array<Int>
    tag6: Array<Int?>
    tag7: LocalDateTime
}

input CompositeBookInput {
    #allScalars
    store {
        #allScalars
        -id
    }
    authors {
        #allScalars
        -id
    }
}
