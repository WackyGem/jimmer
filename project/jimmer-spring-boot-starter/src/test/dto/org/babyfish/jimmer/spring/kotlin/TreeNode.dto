TreeNodeView {
    name
    flat(parent) {
        as(^ -> parent) {
            name
        }
    }
}

TreeNodeView2 {
    #allScalars
    flat(parent) {
        as(^ -> parent) {
            #allScalars
        }
        flat(parent) {
            as(^ -> grandParent) {
                #allScalars
            }
        }
    }
}